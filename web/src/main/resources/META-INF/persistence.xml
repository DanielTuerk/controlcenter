<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="derby_db_angular" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <!-- common models -->
        <class>net.wbz.moba.controlcenter.web.shared.constrution.Construction</class>
        <class>net.wbz.moba.controlcenter.web.server.config.ConfigValue</class>
        <class>net.wbz.moba.controlcenter.web.shared.train.Train</class>
        <class>net.wbz.moba.controlcenter.web.shared.train.TrainFunction</class>
        <class>net.wbz.moba.controlcenter.web.shared.bus.DeviceInfo</class>

        <!-- track configuration models -->
        <class>net.wbz.moba.controlcenter.web.shared.track.model.TrackPart</class>
        <class>net.wbz.moba.controlcenter.web.shared.track.model.TrackPartFunction</class>
        <class>net.wbz.moba.controlcenter.web.shared.track.model.GridPosition</class>
        <class>net.wbz.moba.controlcenter.web.shared.track.model.EventConfiguration</class>
        <class>net.wbz.moba.controlcenter.web.shared.track.model.Configuration</class>

        <!-- track part models -->
        <class>net.wbz.moba.controlcenter.web.shared.track.model.Curve</class>
        <class>net.wbz.moba.controlcenter.web.shared.track.model.Signal</class>
        <class>net.wbz.moba.controlcenter.web.shared.track.model.Straight</class>
        <class>net.wbz.moba.controlcenter.web.shared.track.model.Switch</class>
        <class>net.wbz.moba.controlcenter.web.shared.track.model.Uncoupler</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <!--<properties> from Guice -->
    </persistence-unit>
</persistence>