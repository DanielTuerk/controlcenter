<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <Properties>
        <Property name="LOG_PATTERN">%d [%p] %c{1} - %m%n</Property>
    </Properties>

    <Appenders>

        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- File Appenders on need basis -->
        <RollingFile name="File" fileName="${sys:user.home}/.moba/log/controlcenter.log"
          filePattern="${sys:user.home}/.moba/log/controlcenter-%d{yyyy-MM-dd}-%i.log">
            <LevelRangeFilter minLevel="DEBUG" maxLevel="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </Appenders>

    <Loggers>
      <logger name="net.wbz.moba.controlcenter" level="DEBUG" additivity="false">
        <appender-ref ref="Console"/>
      </logger>


      <logger name="net.wbz.selectrix4java" level="DEBUG" additivity="false">
          <appender-ref ref="Console"/>
        </logger>


        <root level="INFO">
            <appender-ref ref="Console"/>
            <appender-ref ref="File"/>
        </root>
    </Loggers>
</configuration>

