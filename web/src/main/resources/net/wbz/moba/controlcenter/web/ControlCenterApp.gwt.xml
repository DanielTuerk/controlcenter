<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='ControlCenterApp'>

  <!-- Inherit the core Web Toolkit stuff. -->
  <inherits name='com.google.gwt.core.Core'/>
  <inherits name='com.google.gwt.user.User'/>
  <inherits name="com.google.gwt.i18n.I18N"/>
  <inherits name="com.google.gwt.i18n.CldrLocales"/>
  <inherits name="com.google.gwt.user.theme.clean.CleanResources"/>
  <inherits name="com.google.gwt.resources.Resources" />
  <inherits name="com.google.gwt.logging.Logging"/>

  <!-- Enable debug ID. -->
  <inherits name="com.google.gwt.user.Debug"/>
  <set-property name="gwt.enableDebugId" value="true"/>

  <!-- Internationalization support. -->
  <extend-property name="locale" values="en"/>

  <extend-property name="locale" values="ar"/>
  <extend-property name="locale" values="fr"/>
  <extend-property name="locale" values="zh"/>

  <set-property-fallback name="locale" value="en"/>
  <set-configuration-property name="locale.cookie" value="SHOWCASE_LOCALE"/>
  <set-configuration-property name="locale.useragent" value="Y"/>

  <inherits name='com.allen_sauer.gwt.dnd.gwt-dnd'/>

  <inherits name="com.google.gwt.logging.Logging"/>
  <set-property name="gwt.logging.logLevel" value="INFO"/>
  <set-property name="gwt.logging.enabled" value="FALSE"/>
  <set-property name="gwt.logging.consoleHandler" value="ENABLED"/>
  <!--<set-property name="gwt.logging.popupHandler" value="DISABLED" />-->
  <set-property name="gwt.logging.developmentModeHandler" value="ENABLED"/>

  <inherits name="com.google.gwt.precompress.Precompress"/>

  <!-- Google Guave -->
  <inherits name="com.google.common.base.Base"/>
  <inherits name="com.google.common.collect.Collect"/>

  <inherits name="thothbot.parallax.core.Core"/>

  <inherits name="org.vectomatic.libgwtsvg"/>

  <inherits name="org.gwtbootstrap3.GwtBootstrap3"/>
  <inherits name="org.gwtbootstrap3.extras.positionedtabs.PositionedTabs"/>
  <inherits name="org.gwtbootstrap3.extras.toggleswitch.ToggleSwitch"/>
  <inherits name="org.gwtbootstrap3.extras.select.Select"/>
  <inherits name="org.gwtbootstrap3.extras.slider.Slider"/>
  <inherits name="org.gwtbootstrap3.extras.notify.Notify"/>

  <inherits name="com.google.web.bindery.requestfactory.RequestFactory"/>

  <inherits name="de.novanic.eventservice.GWTEventService"/>

  <inherits name="net.wbz.bootstrap.theme.Theme"/>

  <entry-point class='net.wbz.moba.controlcenter.web.client.ControlCenterApp'/>

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='shared'/>

</module>
