<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:cc="urn:import:net.wbz.moba.controlcenter.web.client"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
  <ui:style>
    .contentContainer {
      padding-bottom: 8px;
      height: 0;
    }
    .headerContainer {
      background-color: transparent;
      /*#105d92*/
    }
    .headerContainer2 {
      background-color: #293b50;
    }
  </ui:style>

  <g:HTMLPanel styleName="flexbox-parent">
    <g:HTMLPanel addStyleNames="flexbox-item {style.headerContainer}">
      <cc:AppMenu ui:field="appMenu"/>
      <cc:StatePanel />
    </g:HTMLPanel>
<!--    <div class="flexbox-item">-->
<!--    </div>-->
    <g:HTMLPanel ui:field="contentContainer" styleName="{style.contentContainer} fill-area flexbox-item-grow">
    </g:HTMLPanel>
  </g:HTMLPanel>
</ui:UiBinder>