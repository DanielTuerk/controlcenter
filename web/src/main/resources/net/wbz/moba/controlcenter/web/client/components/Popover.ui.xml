<ui:UiBinder
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
  <ui:style>
    .popover-container {
      display: block;
    }
    .content-padding {
      padding: 5px;
    }
  </ui:style>
  <g:FlowPanel styleName="popover fade in {style.popover-container}">
    <g:SimplePanel ui:field="arrowPanel" styleName="arrow"/>
    <b:Heading size="H3" ui:field="heading" styleName="popover-title"/>
    <b:gwt.FlowPanel ui:field="contentPanel" styleName="popover-content {style.content-padding}"/>
  </g:FlowPanel>
</ui:UiBinder>