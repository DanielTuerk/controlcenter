<ui:UiBinder xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
  <g:HTMLPanel>
    <b:Modal title="Send data" ui:field="modal">
      <b:ModalBody>
        <b:Form type="INLINE">
          <b:FieldSet>
            <b:FormGroup>
              <b:TextBox placeholder="bus" ui:field="txtBus" maxLength="1"/>
            </b:FormGroup>
            <b:FormGroup>
              <b:TextBox placeholder="address" ui:field="txtAddress" maxLength="3"/>
            </b:FormGroup>
            <b:FormGroup>
              <b:TextBox placeholder="data" ui:field="txtData" maxLength="3"/>
            </b:FormGroup>
          </b:FieldSet>
        </b:Form>
      </b:ModalBody>
      <b:ModalFooter>
        <b:Button ui:field="btnSend" text="Send" pull="RIGHT" type="PRIMARY"/>
        <b:Button ui:field="btnClose" text="Close" pull="LEFT"/>
      </b:ModalFooter>
    </b:Modal>
  </g:HTMLPanel>
</ui:UiBinder>