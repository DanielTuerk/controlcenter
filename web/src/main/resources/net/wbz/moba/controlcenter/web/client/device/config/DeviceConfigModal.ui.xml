<ui:UiBinder xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:device="urn:import:net.wbz.moba.controlcenter.web.client.device.config"
>

  <g:HTMLPanel>
    <b:Modal title="Configure Device" ui:field="modal">
      <b:ModalBody>

        <b:PageHeader text="Create Device"/>
        <device:DeviceCreatePanel/>

        <b:PageHeader text="Edit Device"/>
        <device:DeviceOverviewPanel/>

      </b:ModalBody>
      <b:ModalFooter>
        <b:Button ui:field="btnClose" text="Close"/>
      </b:ModalFooter>
    </b:Modal>
  </g:HTMLPanel>
</ui:UiBinder>