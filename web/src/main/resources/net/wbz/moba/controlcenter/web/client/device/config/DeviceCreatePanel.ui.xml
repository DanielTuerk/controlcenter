<ui:UiBinder xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
>

  <b:Form type="HORIZONTAL">
    <b:FormGroup>
      <b:FormLabel for="txtKey" addStyleNames="col-lg-2">Key</b:FormLabel>
      <g:FlowPanel addStyleNames="col-lg-10">
        <b:TextBox b:id="txtKey" ui:field="txtKey"/>
      </g:FlowPanel>
    </b:FormGroup>
    <b:FormGroup>
      <g:FlowPanel addStyleNames="col-lg-offset-2 col-lg-10">
        <b:Button ui:field="btnCreate">Create</b:Button>
      </g:FlowPanel>
    </b:FormGroup>
  </b:Form>

</ui:UiBinder>