<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:cc="urn:import:net.wbz.moba.controlcenter.web.client.components">


  <b:Container fluid="true">

    <b:Panel>
      <b:PanelHeader>
        <b:Heading size="H4" text="Lights configuration"/>
      </b:PanelHeader>
      <b:PanelBody ui:field="panelBodyLightsConfig">
      </b:PanelBody>
    </b:Panel>

    <b:Panel>
      <b:PanelHeader>
        <b:Heading size="H4" text="Blocks configuration"/>
      </b:PanelHeader>
      <b:PanelBody>

        <b:Form type="HORIZONTAL">
          <b:FieldSet>

            <b:FormGroup>
              <b:FormLabel for="selectEnteringBlock" addStyleNames="col-md-3">Entering Block</b:FormLabel>
              <g:FlowPanel addStyleNames="col-md-6">
                <cc:TrackBlockSelect ui:field="selectEnteringBlock">
                </cc:TrackBlockSelect>
                <!--<b:ListBox ui:field="selectEnteringBlock">-->
                <!--</b:ListBox>-->
              </g:FlowPanel>
            </b:FormGroup>

            <b:FormGroup>
              <b:FormLabel for="selectBreakingBlock" addStyleNames="col-md-3">Breaking Block</b:FormLabel>
              <g:FlowPanel addStyleNames="col-md-6">
                <cc:TrackBlockSelect ui:field="selectBreakingBlock">
                </cc:TrackBlockSelect>
              </g:FlowPanel>
            </b:FormGroup>

            <b:FormGroup>
              <b:FormLabel for="selectStopBlock" addStyleNames="col-md-3">Stop Block</b:FormLabel>
              <g:FlowPanel addStyleNames="col-md-6">
                <cc:TrackBlockSelect ui:field="selectStopBlock">
                </cc:TrackBlockSelect>
              </g:FlowPanel>
            </b:FormGroup>

            <b:FormGroup>
              <b:FormLabel for="selectMonitoringBlock" addStyleNames="col-md-3">Monitoring Block</b:FormLabel>
              <g:FlowPanel addStyleNames="col-md-6">
                <cc:TrackBlockSelect ui:field="selectMonitoringBlock">
                </cc:TrackBlockSelect>
              </g:FlowPanel>
            </b:FormGroup>


          </b:FieldSet>
        </b:Form>

      </b:PanelBody>
    </b:Panel>


  </b:Container>

</ui:UiBinder>