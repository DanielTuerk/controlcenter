<ui:UiBinder
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
>
  <ui:style>
    .bus {
      flex: 1;
      margin-left: 5px;
      margin-right: 5px;
    }

    .container {
      display: flex;
      flex-direction: row;
    }

  </ui:style>
  <b:Container addStyleNames="{style.container}" fluid="true">

    <g:HTMLPanel addStyleNames="{style.bus}">
      <b:PageHeader text="Bus 0"/>
      <g:HTMLPanel ui:field="bus0">
      </g:HTMLPanel>
    </g:HTMLPanel>

    <g:HTMLPanel addStyleNames="{style.bus}">
      <b:PageHeader text="Bus 1"/>
      <g:HTMLPanel ui:field="bus1">
      </g:HTMLPanel>
    </g:HTMLPanel>

  </b:Container>
</ui:UiBinder>