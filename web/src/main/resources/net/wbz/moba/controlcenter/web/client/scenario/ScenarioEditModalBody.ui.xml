<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui">

  <b:Form type="HORIZONTAL">
    <b:FieldSet>
      <b:Legend ui:field="legend"/>

      <b:FormGroup>
        <b:FormLabel for="formName" addStyleNames="col-lg-2">Name</b:FormLabel>
        <g:FlowPanel addStyleNames="col-lg-10">
          <b:TextBox ui:field="txtName"/>
        </g:FlowPanel>
      </b:FormGroup>

      <b:FormGroup>
        <b:FormLabel for="formAddress" addStyleNames="col-lg-2">Cron</b:FormLabel>
        <g:FlowPanel addStyleNames="col-lg-10">
          <b:TextBox ui:field="txtCron"/>
        </g:FlowPanel>
      </b:FormGroup>

    </b:FieldSet>
    <b:FieldSet>
      <b:Legend>foo</b:Legend>

      <b:FormGroup>
        <b:FormLabel addStyleNames="col-lg-2">Train</b:FormLabel>
        <g:FlowPanel addStyleNames="col-lg-10">
          <select:Select ui:field="selectTrain">
          </select:Select>
        </g:FlowPanel>
      </b:FormGroup>

      <b:FormGroup>
        <b:FormLabel addStyleNames="col-lg-2">Routes</b:FormLabel>
        <g:FlowPanel addStyleNames="col-lg-10">
          <select:MultipleSelect ui:field="selectRoutes">
            <!--<select:Option text="..."/>-->
          </select:MultipleSelect>
        </g:FlowPanel>
      </b:FormGroup>


    </b:FieldSet>
  </b:Form>
</ui:UiBinder>