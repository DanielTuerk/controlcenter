<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:b-gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

  <ui:style>
    .scenarioContainer {
      min-width: 80%;
    }
  </ui:style>
  <b:Container fluid="true" ui:field="container" addStyleNames="{style.scenarioContainer}">
    <b:Button type="PRIMARY" icon="PLUS" text="Create Scenario" ui:field="btnCreateScenario"/>
    <b-gwt:CellTable ui:field="scenarioTable" bordered="true" condensed="true" striped="true" hover="true"
      height="100%" width="100%"/>
  </b:Container>

</ui:UiBinder>