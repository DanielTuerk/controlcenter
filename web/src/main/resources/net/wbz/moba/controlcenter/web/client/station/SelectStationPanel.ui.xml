<ui:UiBinder xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:cc="urn:import:net.wbz.moba.controlcenter.web.client.components">

  <ui:style>
    .distance {
      padding-bottom: 15px;
    }
  </ui:style>

  <b:Container>
    <b:Row>
      <b:Column size="MD_4">
        <b:Heading size="H3" text="Select station(s) to show:"/>
      </b:Column>
      <b:Column size="MD_3" addStyleNames="{style.distance}">
        <cc:StationMultiSelect width="100%" ui:field="stationMultiSelect"/>
      </b:Column>
      <b:Column size="MD_2">
        <b:Button ui:field="btnOpenSingle">Open</b:Button>
      </b:Column>
    </b:Row>
  </b:Container>
</ui:UiBinder>