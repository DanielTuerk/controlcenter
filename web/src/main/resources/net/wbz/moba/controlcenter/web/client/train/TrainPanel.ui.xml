<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:b-gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .trainContainer {
      width: 80%;
    }
  </ui:style>
  <g:HTMLPanel addStyleNames="scrollPanel">
    <b:Container addStyleNames="{style.trainContainer}"  fluid="true" >
      <b:Button icon="PLUS" text="Create Train" type="PRIMARY" ui:field="btnCreateTrain"/>
      <b-gwt:CellTable bordered="true" condensed="true" hover="true" striped="true" ui:field="trainTable"
      />
      <b:Pagination paginationSize="SMALL" ui:field="pagination"/>
    </b:Container>
  </g:HTMLPanel>
</ui:UiBinder>