<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:b-gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

  <ui:style>
    .trainContainer {
      min-width: 80%;
    }
  </ui:style>
  <b:Container fluid="true"  addStyleNames="{style.trainContainer}" >
    <b:Button type="PRIMARY" icon="PLUS" text="Create Train" ui:field="btnCreateTrain"/>
    <b-gwt:CellTable ui:field="trainTable" bordered="true" condensed="true" striped="true" hover="true"
     />
    <b:Pagination ui:field="pagination" paginationSize="SMALL"/>
  </b:Container>

</ui:UiBinder>