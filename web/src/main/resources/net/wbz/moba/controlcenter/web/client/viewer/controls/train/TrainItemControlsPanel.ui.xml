<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:cc="urn:import:net.wbz.moba.controlcenter.web.client.components"
  xmlns:slider="urn:import:org.gwtbootstrap3.extras.slider.client.ui"
>

  <g:HTMLPanel>
    <b:Button ui:field="btnEditTrain" icon="PENCIL"/>
    <b:ButtonGroup>
      <b:Button ui:field="btnDirectionForward" icon="ARROW_LEFT"/>
      <b:Button ui:field="btnDirectionBackward" icon="ARROW_RIGHT"/>
    </b:ButtonGroup>
    <b:Label ui:field="lblSliderValue"/>
    <slider:Slider ui:field="sliderDrivingLevel" min="0" value="0" max="31" tooltip="ALWAYS" tooltipPosition="TOP"/>
    <b:Button ui:field="btnStop" icon="STOP_CIRCLE"/>

    <g:FlowPanel ui:field="trainFunctionsPanel">
      <cc:OnOffToggleButton ui:field="btnLight" onIcon="LIGHTBULB_O" offIcon="LIGHTBULB_O"/>
      <cc:OnOffToggleButton ui:field="btnHorn" onIcon="VOLUME_UP" offIcon="VOLUME_DOWN"/>
    </g:FlowPanel>
  </g:HTMLPanel>

</ui:UiBinder>