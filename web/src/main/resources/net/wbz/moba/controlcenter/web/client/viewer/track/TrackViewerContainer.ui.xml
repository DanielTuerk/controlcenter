<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
>
  <ui:style>
    .flexContainer {
      display: flex;
      height: 100%
    }

    .controlsContainer {
      width: 400px;
    }

    .trackContainer {
      /*width: calc(100% - 400px);*/
      flex-grow: 1;
    }

  </ui:style>

  <g:HTMLPanel ui:field="container" styleName="{style.flexContainer}">
    <g:HTMLPanel ui:field="trackContainer" styleName="{style.trackContainer}"/>
    <g:HTMLPanel ui:field="controlsContainer" styleName="{style.controlsContainer}"/>
  </g:HTMLPanel>
</ui:UiBinder>